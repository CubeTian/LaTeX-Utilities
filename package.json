{
    "name": "latex-utilities",
    "displayName": "LaTeX Utilities",
    "description": "An add-on to LaTeX Workshop that provides some fancy features that are less vital to the basic experience editing a LaTeX document, but can be rather nice to have.",
    "icon": "icon.png",
    "version": "0.1.0",
    "publisher": "tecosaur",
    "license": "MIT",
    "homepage": "https://github.com/tecosaur/LaTeX-Utilities",
    "repository": {
        "type": "git",
        "url": "https://github.com/tecosaur/LaTeX-Utilities.git"
    },
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "latex",
        "tex",
        "hint"
    ],
    "activationEvents": [
        "onLanguage:tex",
        "onLanguage:latex",
        "onLanguage:doctex"
    ],
    "main": "./out/src/main.js",
    "contributes": {
        "commands": [
            {
                "command": "latex-utilities.editLiveSnippetsFile",
                "title": "Edit Live Snippets File",
                "category": "LaTeX Utilities"
            },
            {
                "command": "latex-utilities.pasteImage",
                "title": "Paste an Image File",
                "category": "LaTeX Utilities"
            }
        ],
        "configuration": {
            "title": "LaTeX Utils",
            "properties": {
                "latex-utilities.liveReformat.enabled": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Apply live text replacements to make writing latex maths easier (e.g. `xx` â†’ `\\times`). Also see the command \"Edit Live Snippets File\""
                },
                "latex-utilities.imagePaste.template": {
                    "type": [
                        "string",
                        "array"
                    ],
                    "default": "\\includegraphics{${imageFileName}}",
                    "markdownDescription": "The template to use for pasting the image (use an array for multiline strings), use `${imageFileName}` to represent the image file. Can also use `${imageFileNameWithoutExt}`"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.36.0",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "eslint": "^6.1.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "typescript": "^3.3.1",
        "vscode": "^1.1.14"
    },
    "dependencies": {
        "fs-extra": "^8.1.0"
    }
}
